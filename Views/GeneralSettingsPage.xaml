<Page x:Class="MailTrayNotifier.Views.GeneralSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GeneralSettingsPage">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24" VerticalAlignment="Top" >
           
                <ui:CardControl Icon="PlayCircle24">
                    <ui:CardControl.Header>
                        <StackPanel>
                            <ui:TextBlock Text="자동 실행" FontTypography="Body" Foreground="White" />
                            <ui:TextBlock Text="Windows에 로그인할 때 자동으로 시작합니다." FontTypography="Caption" Foreground="WhiteSmoke" />
                        </StackPanel>
                    </ui:CardControl.Header>
                    <ui:ToggleSwitch IsChecked="{Binding RunAtStartup, Mode=TwoWay}" OnContent="On" OffContent="Off"/>
                </ui:CardControl>

                <!-- 전체 알림 설정 -->
                <ui:CardControl Icon="PlayCircle24" Margin="0,16,0,0">
                    <ui:CardControl.Header>
                        <StackPanel >
                            <ui:TextBlock Text="알림" FontTypography="Body" />
                            <ui:TextBlock Text="설정된 메일 알림을 사용 하도록 설정합니다. Off로 설정된 경우 모든 메일 알림을 받을 수 없습니다." FontTypography="Caption" Foreground="WhiteSmoke" TextWrapping="Wrap"/>
                        </StackPanel>
                    </ui:CardControl.Header>
                    <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding IsRefreshEnabled, Mode=TwoWay}" VerticalAlignment="Center" OnContent="On" OffContent="Off"/>
                </ui:CardControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
