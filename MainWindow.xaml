<ui:FluentWindow
x:Class="MailTrayNotifier.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
xmlns:local="clr-namespace:MailTrayNotifier"
xmlns:views="clr-namespace:MailTrayNotifier.Views"
Title="메일 알림 설정"

Width="500"
Height="600"
MinHeight="400"
ResizeMode="NoResize"
WindowBackdropType="Mica"
ExtendsContentIntoTitleBar="True">
<ui:FluentWindow.Resources>
    <Style x:Key="NavMenuButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8,12"/>
        <Setter Property="Margin" Value="4,2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="4" 
                            Padding="{TemplateBinding Padding}"
                            Margin="{TemplateBinding Margin}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ui:FluentWindow.Resources>
    <Grid  Background="#151c26">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 타이틀 바 영역 (WPF-UI TitleBar - 드래그 기본 지원) -->
        <ui:TitleBar Grid.Row="0" 
                     ShowMaximize="False"
                     ShowMinimize="False"
                     Background="#151c26"
                     Margin="0,0,0,0">
            <ui:TitleBar.Header>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Assets/icon.png" Width="16" Height="16" Margin="8,0,8,0"/>
                    <TextBlock Text="메일 알림 설정" VerticalAlignment="Center" FontSize="12"/>                   
                </StackPanel>
            </ui:TitleBar.Header>
        </ui:TitleBar>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 좌측 메뉴 -->
            <Border Grid.Column="0" Background="#151c26" BorderThickness="0,0,0,0" BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                <StackPanel Margin="0,8,0,0">
                    <RadioButton x:Name="MenuMail" GroupName="NavMenu" IsChecked="True" Click="NavMenu_Click" Style="{StaticResource NavMenuButtonStyle}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Mail24" FontSize="24" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="메일" FontSize="12" HorizontalAlignment="Center" Margin="0,4,0,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton x:Name="MenuSettings" GroupName="NavMenu" Click="NavMenu_Click" Style="{StaticResource NavMenuButtonStyle}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Settings24" FontSize="24" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="설정" FontSize="12" HorizontalAlignment="Center" Margin="0,4,0,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton x:Name="MenuAbout" GroupName="NavMenu" Click="NavMenu_Click" Style="{StaticResource NavMenuButtonStyle}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Info24" FontSize="24" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="About" FontSize="12" HorizontalAlignment="Center" Margin="0,4,0,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </RadioButton>
                  
                </StackPanel>
            </Border>

            <!-- 콘텐츠 영역 -->
            <Border Grid.Column="1" CornerRadius="8" Background="#21262d" Margin="4">
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Padding="0,0,0,4"/>
            </Border>
        </Grid>
    </Grid>
</ui:FluentWindow>
